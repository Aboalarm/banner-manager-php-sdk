<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php"
         backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         verbose="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false">
    <testsuites>
        <testsuite name="BannerPackage Test Suite">
            <directory>tests</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">src/</directory>
        </whitelist>
    </filter>
    <php>
        <env name="BANNER_SDK_API_BASE_URI" value="http://localhost:8000" />
        <env name="BANNER_SDK_API_USERNAME" value="123456789" />
        <env name="BANNER_SDK_API_PASSWORD" value="" />
        <env name="BANNER_SDK_REPORTS_PATH" value="reports" />
    </php>
</phpunit>
